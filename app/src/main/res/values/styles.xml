<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ForEverything" parent="TextAppearance.AppCompat.Medium">
        <!-- thank you style -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_marginRight">@dimen/large_margin</item>
        <item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThankYou" parent="ForEverything">
        <!-- Good Luck style -->
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
    </style>

    <style name="GoodLuck" parent="ForEverything">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

</resources>
